{
  "name": "node-express-typescript-trpc-rebbitmq",
  "version": "1.0.0",
  "main": "server.js",
  "private": true,
  "author": "Sahil Bhanvadiya",
  "license": "ISC",
  "scripts": {
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register --transpile-only src/index.ts",
    "start": "tsc && tsc-alias && node dist",
    "build": "tsc && tsc-alias",
    "env": "sync-dotenv",
    "liquibase": "cd liquibase && liquibase update",
    "liquibase-clear-checksums": "cd liquibase && liquibase clear-checksums",
    "liquibase-prod": "cd liquibase && liquibase update --defaultsFile=./liquibase-prod.properties",
    "liquibase-dev": "cd liquibase && liquibase update --defaultsFile=./liquibase-dev.properties",
    "liquibase-stage": "cd liquibase && liquibase update --defaultsFile=./liquibase-stage.properties",
    "format": "biome check --write src/"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "email-templates": "^12.0.1",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.11.8",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/method-override": "^0.0.35",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "sync-dotenv": "^2.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.6.2"
  }
}
