{
  "name": "node-express-typescript-trpc-rebbitmq",
  "version": "1.0.0",
  "main": "server.js",
  "private": true,
  "author": "Sahil Bhanvadiya",
  "license": "ISC",
  "scripts": {
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register --transpile-only src/index.ts",
    "start": "tsc && tsc-alias && node dist",
    "build": "tsc && tsc-alias",
    "env": "sync-dotenv",
    "postinstall": "husky install",
    "liquibase": "cd liquibase && liquibase update",
    "liquibase-clear-checksums": "cd liquibase && liquibase clear-checksums",
    "liquibase-prod": "cd liquibase && liquibase update --defaultsFile=./liquibase-prod.properties",
    "liquibase-dev": "cd liquibase && liquibase update --defaultsFile=./liquibase-dev.properties",
    "liquibase-stage": "cd liquibase && liquibase update --defaultsFile=./liquibase-stage.properties",
    "format": "biome check --write src/"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "email-templates": "^11.1.1",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "libphonenumber-js": "^1.10.47",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "winston": "^3.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/email-templates": "^10.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/method-override": "^0.0.32",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "sync-dotenv": "^2.7.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.5.4"
  }
}
