{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": true,
    "paths": {
      "@entities": ["./db/entities"],
      "@db": ["./db"],
      "@helpers": ["./helpers"],
      "@types": ["./types"],
      "@modules": ["./modules"],
      "@middlewares": ["./middlewares"],
      "@modules/*": ["./modules/*"],
      "@configs": ["./configs"],
      "@acl": ["./acl"]
    }
  },
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "include": ["src/**/*.ts", "src/types/types.ts"],
  "exclude": ["node_modules"]
}
